<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Silverrock Detailing"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#263238"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:backgroundTint="#3949AB"
    android:fontFamily="sans-serif-medium"
    android:elevation="6dp"
    android:stateListAnimator="@null"
    android:layout_marginTop="8dp"
    app:cornerRadius="16dp"
    app:layout_constraintTop_toBottomOf="@id/txtTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Login"
        android:textAllCaps="false"
        android:backgroundTint="#00897B"
    android:textColor="#FFFFFF"
    android:fontFamily="sans-serif-medium"
    android:elevation="6dp"
    android:stateListAnimator="@null"
    android:layout_marginTop="16dp"
    app:cornerRadius="16dp"
    app:layout_constraintTop_toBottomOf="@id/btnSignup"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSignup2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Sign Up 2"
        android:textAllCaps="false"
        android:backgroundTint="#F4511E"
    android:textColor="#FFFFFF"
    android:fontFamily="sans-serif-medium"
    android:elevation="6dp"
    android:stateListAnimator="@null"
    android:layout_marginTop="16dp"
    app:cornerRadius="16dp"
    app:layout_constraintTop_toBottomOf="@id/btnLogin"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnLogin2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Login 2"
        android:textAllCaps="false"
        android:backgroundTint="#3949AB"
    android:textColor="#FFFFFF"
    android:fontFamily="sans-serif-medium"
    android:elevation="6dp"
    android:stateListAnimator="@null"
    android:layout_marginTop="16dp"
    app:cornerRadius="16dp"
    app:layout_constraintTop_toBottomOf="@id/btnSignup2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnUpdates"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Updates"
        android:textAllCaps="false"
        android:backgroundTint="#546E7A"
    android:textColor="#FFFFFF"
    android:fontFamily="sans-serif-medium"
    android:elevation="6dp"
    android:stateListAnimator="@null"
    android:layout_marginTop="24dp"
    app:cornerRadius="16dp"
    app:layout_constraintTop_toBottomOf="@id/btnLogin2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
